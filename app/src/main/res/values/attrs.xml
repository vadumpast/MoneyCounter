<resources>
    <declare-styleable name="RoundTextButton">
        <attr name="btn_icon" format="string" />
        <attr name="btn_color" format="reference" />
        <attr name="text_title" format="string" />
    </declare-styleable>

    <declare-styleable name="MCToolbar">
        <attr name="right_btn_icon" format="string" />
        <attr name="icon_color" format="reference" />
        <attr name="toolbar_title" format="string" />
        <attr name="is_right_button" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NumberButton">
        <attr name="number" format="integer" />
        <attr name="is_fingerprint_button" format="boolean"/>
        <attr name="is_clear_button" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MCProgressbar">
        <attr name="lines_num" format="integer"/>
    </declare-styleable>
</resources>