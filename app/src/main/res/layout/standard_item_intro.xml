<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_intro_item"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:adjustViewBounds="true"
        tools:src="@drawable/intro_mission"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="70dp"
        android:gravity="center"
        tools:text="Миссия"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_intro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:fontFamily="@font/roboto_regular"
        tools:text="Миссия нашего приложения научить вас контролировать поток денег и удерживать его в вашем кошельке."
        android:textColor="@color/dark_text"
        android:textSize="20sp" />
</LinearLayout>