<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/layout_income_category">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ib_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/selector_image_view"
        android:padding="18dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/home_icon_income"
        android:elevation="6dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:lines="2"
        android:ellipsize="end"
        tools:text="@string/home_text_income"
        android:fontFamily="@font/sarabun_medium"
        android:textColor="@color/dark_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>